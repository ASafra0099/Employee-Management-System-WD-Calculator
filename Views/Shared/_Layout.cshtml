<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Management System</title>

    <!-- Link to Bootstrap CSS for styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Link to Bootstrap Icons for icon support -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Link to the site-specific CSS for custom styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Link to employee management system-specific CSS -->
    <link rel="stylesheet" href="~/EmployeeManagement_system.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-fluid">
        <div class="row flex-nowrap">
            <!-- Sidebar Section -->
            <div class="col-auto custom-sidebar px-sm-2 px-0" style="background-color:darkcyan;">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <!-- Branding section -->
                    <a href="/" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline" style="font-weight: bold;">TalentPlus Employee Center</span>
                    </a>
                    <!-- Sidebar menu -->
                    <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                        <!-- Home link -->
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link align-middle px-0 text-white">
                                <i class="fs-4 bi bi-house-fill"></i><span class="ms-1 d-none d-sm-inline">Home</span>
                            </a>
                        </li>

                        <!-- Employees section with collapsible submenu -->
                        <li>
                            <a href="#submenu1" data-bs-toggle="collapse" class="nav-link px-0 align-middle text-white">
                                <i class="fs-4 bi bi-people-fill"></i><span class="ms-1 d-none d-sm-inline">Employees</span>
                            </a>
                            <ul class="collapse show nav flex-column ms-3" id="submenu1" data-bs-parent="#menu">
                                <!-- Add Employee link -->
                                <li class="nav-item">
                                    <a asp-controller="Employee" asp-action="Add" class="nav-link d-flex align-items-center px-0 text-white">
                                        <i class="bi bi-chevron-right me-2"></i>
                                        <span>Add Employee</span>
                                    </a>
                                </li>

                                <!-- List All Employees link -->
                                <li class="nav-item">
                                    <a asp-controller="Employee" asp-action="Index" class="nav-link d-flex align-items-center px-0 text-white">
                                        <i class="bi bi-chevron-right me-2"></i>
                                        <span>List All</span>
                                    </a>
                                </li>

                                <!-- Calculate Working Days link -->
                                <li class="nav-item">
                                    <a asp-controller="Employee" asp-action="CalculateWorkingDays" class="nav-link d-flex align-items-center px-0 text-white">
                                        <i class="bi bi-chevron-right me-2"></i>
                                        <span>Calculate Working Days</span>
                                    </a>
                                </li>
                            </ul>
                        </li>

                    </ul>
                    <hr>
                </div>
            </div>

            <!-- Main Content Section -->
            <div class="col py-3">
                @RenderBody()  <!-- Placeholder for the main content rendered by views -->
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer class="text-white text-center py-4 mt-5" style="background-color:#003B46;">
        <p>&copy; 2024 Employee Management System | All Rights Reserved</p>
        <a href="#" class="text-white mx-2">Privacy Policy</a> |
        <a href="#" class="text-white mx-2">Terms of Service</a>
    </footer>

    <!-- jQuery and Bootstrap JS for functionality -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- jQuery Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <!-- Render any additional scripts if needed -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
